{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:codegen": "prisma generate",
    "db:generate": "prisma migrate dev --create-only",
    "db:init": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "test": "jest --config ./test/jest.config.ts --runInBand",
    "test:e2e": "jest --config ./test/jest.e2e.config.ts --runInBand"
  },
  "dependencies": {
    "@apollo/server": "4.11.0",
    "@nestjs/apollo": "12.2.0",
    "@nestjs/common": "10.4.3",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.3",
    "@nestjs/graphql": "12.2.0",
    "@nestjs/platform-express": "10.4.3",
    "@prisma/client": "5.19.1",
    "graphql": "16.9.0",
    "joi": "17.13.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.13",
    "@types/node": "20.16.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.6.0",
    "@typescript-eslint/parser": "8.6.0",
    "dotenv": "16.4.5",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "prisma": "5.19.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "supertest-graphql": "1.1.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}